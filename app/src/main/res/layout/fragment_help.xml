<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.AboutFragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_upper">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_berandaup">
            <TextView
                android:id="@+id/title_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplikasi Laporan Masyarakat"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:letterSpacing="0.03"
                android:textSize="20sp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:layout_below="@id/title_up"
                android:id="@+id/title_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kabupaten Minahasa Selatan"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                />

            <ImageView
                android:layout_width="68dp"
                android:layout_height="65dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/halominsel_circle" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_berandaup"
            android:layout_marginTop="20dp"
            android:background="@drawable/square_rounded_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="15dp"
                android:text="TATA CARA"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>